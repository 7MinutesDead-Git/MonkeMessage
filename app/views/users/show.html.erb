<%#  https://guides.rubyonrails.org/form_helpers.html %>
<%= javascript_pack_tag 'card_reveal' %>

<div id="page-content">
  <h1 class="text-center" id="header-title-anim">
    <span class="user-profile-header-prefix font-monospace">
      user ->
    </span>
    <span class="user-profile-header-username font-monospace">
      <%= @user.username %>
    </span>
  </h1>

  <div class="text-center mt-4">
    <% if logged_in? && @user.username == current_user %>
      <%= link_to("Edit profile", edit_user_path(@user), class: "btn btn-primary") %>
    <% end %>
  </div>

  <%== pagy_bootstrap_nav(@pagy) %>
  <%= render('articles/article') %>
  <%== pagy_bootstrap_nav(@pagy) %>
</div>
