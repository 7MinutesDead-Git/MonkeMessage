<!-- https://guides.rubyonrails.org/form_helpers.html -->

<h1>Create new article.</h1>

<%= form_with(scope: :article, url: articles_path, local: true) do |f| %>

  <p>
    <!-- Text input here will be saved as article title. -->
    <%= f.label :title %> <br/>
    <%= f.text_field :title %>
  </p>

  <p>
    <!-- Text input here will be saved as article description. -->
    <%= f.label :description %> <br/>
    <%= f.text_area :description %>
  </p>

  <p>
    <!-- Button to submit new article to db. -->
    <%= f.submit %>
  </p>
<% end %>