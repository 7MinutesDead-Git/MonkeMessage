<h1 class="text-center">Messages to Monke</h1>

<p>
  <%= link_to("Create New Message", new_article_path, class: "btn btn-success", id: "create_new_message_btn") %>
</p>

<% @articles.each do |article| %>
  <div class="row justify-content-center">
    <div class="col-8 mt-5">
      <div class="container">
        <div class="card">

          <div class="card-header font-monospace">
            Author: Peepoo Boy
          </div>

          <div class="bg-gradient card-body shadow">
            <h5 class="card-title"><%= article.title %></h5>
            <p class="card-text"><%= article.description %></p>
            <div class="font-monospace">
              <%= link_to("View", article_path(article), class: "btn btn-primary") %>
              <%= link_to("Edit", edit_article_path(article), class: "btn btn-primary") %>
              <%= link_to("Delete", edit_article_path(article), class: "btn btn-danger") %>
            </div>
          </div>

          <div class="card-footer text-muted font-monospace">
            Dates go here.
          </div>

        </div>
      </div>
    </div>
  </div>

<% end %>