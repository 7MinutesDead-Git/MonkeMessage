<h1>All Articles</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
  <!-- Each article is going to make a new table row, and include each data (td). -->
  <% @articles.each do |article| %>
  <tr>
    <td><%= article.title %></td>
    <td><%= article.description %></td>
    <td><%= link_to('Show', article_path(article.id), method: :get) %></td>
    <td><%= link_to('Edit', edit_article_path(article.id), method: :get) %></td>
    <!-- Link name is "Delete", links to article.id path, and sends DELETE verb. -->
    <!-- DELETE request will access our "destroy" method in Article class. -->
    <td><%= link_to('Delete', article_path(article.id), method: :delete) %></td>
  </tr>
  <% end %>
  </tbody>
</table>