<div id="page-content">
  <h1 class="text-center">Messages to Monke</h1>

  <p>
    <%= link_to("Write to Monke", new_article_path, class: "btn btn-outline-warning", id: "create_new_message_btn") %>
  </p>

  <% @articles.each do |article| %>
    <div class="row justify-content-center">
      <div class="col-8 mt-5">
        <div class="container">
          <div class="card">

            <div class="card-header font-monospace">
              Author: Anonymous
            </div>

            <%# Main card bodu. ----------------------------------------------------------- %>
            <div class="bg-gradient card-body shadow">
              <%# Title. ----------------------------------- %>
              <h5 class="card-title">
                <%= article.title %>
              </h5>

              <%# Description. ----------------------------- %>
              <p class="card-text">
                <%= simple_format(truncate(article.description, length: 200)) %>
              </p>

              <%# Buttons. --------------------------------- %>
              <div class="font-monospace">
                <% if article.description.length > 200 %>
                  <%= link_to("View Full", article_path(article), class: "btn btn-primary") %>
                <% end %>

                <%= link_to("Edit", edit_article_path(article), class: "btn btn-dark") %>
                <%= link_to(
                      "Delete",
                      article_path(article),
                      class: "btn btn-danger",
                      method: :delete,
                      data: {confirm: "Do you want to delete this message: #{article.title}?"}
                    )
                %>
              </div>
            </div>

            <%# Timestamp footer. ----------------------------------------------------- %>
            <div class="card-footer text-muted font-monospace">
              <small>
                Posted <%= time_ago_in_words(article.created_at) %> ago.

                <% if article.updated_at != article.created_at %>
                  Edited <%=time_ago_in_words(article.updated_at) %> ago.
                <% end %>
              </small>
            </div>

          </div>
        </div>
      </div>
    </div>
  <% end %>

</div>