<h1 class="text-center">Messages to Monke</h1>

<p>
  <a href="#" class="btn btn-success font-monospace">Create New Message</a>
</p>

<% @articles.each do |article| %>
  <div class="row justify-content-center">
    <div class="col-8 mt-5">
      <div class="container">
        <div class="card">

          <div class="card-header font-monospace">
            Author: Peepoo Boy
          </div>

          <div class="bg-gradient card-body shadow">
            <h5 class="card-title"><%= article.title %></h5>
            <p class="card-text"><%= article.description %></p>
            <div class="font-monospace">
              <a href="#" class="btn btn-primary">View</a>
              <a href="#" class="btn btn-primary">Edit</a>
              <a href="#" class="btn btn-danger align-self-end">Delete</a>
            </div>
          </div>

          <div class="card-footer text-muted font-monospace">
            Dates go here.
          </div>

        </div>
      </div>
    </div>
  </div>

<% end %>

<p>
  <a href="#" class="btn btn-success font-monospace">Create New Message</a>
</p>